.background {
    height: 750px;
    position: absolute;
    left:0px;
    top: 0px;
    width: 100%;
    z-index: -10;
    background: url('<%= asset_path('background.png') %>') no-repeat;
    background-size: 100% 900px;
    box-shadow: 0px 0px 30px #777;
}

.userWrap, .npoWrap, .businessWrap {
    height: 500px;
    position: absolute;
    display: inline-block;
    width: 100%;

}

.userWrap {
    left: 0px;

}

.businessWrap {
    display: none;
}

.npoWordsWrap {
    display: inline-block;
}

.cycleImgWrap {
    display: inline-block;
    margin-right: 75px;
    margin-left: 100px;
    margin-top: 20px;
}

.buttonsWrap {
    text-align: center;
    width: 600px;
    margin: 0px auto;
    margin-top: 20px;
}

.chooseButton {
    font-weight: bold;
    font-size: 35px;
    margin-right: 20px;
    display: inline-block;
    color: #555;
    padding-top: 5px;
}

.chooseButton:hover {
    color: #222;
    cursor: pointer;
}

.chooseButton:last-child {
    margin-right: 0px;
}

.chosen {
    border-top: 5px solid #118BB5;
    color: #222;
}

.npoWrap {
    display: none;
}

.splashContainer {
    position: relative;
    overflow: hidden;
    height: 500px;
}

.logoWrap {
    margin-top: 15px;

}
.logoWrap img {
    width: 300px;
}

.npoTitle {
    text-align: center;
    margin-top: 40px;
}

.indexCycleWrap {
    text-align: center;
    margin-top: 30px;
    width: 900px;
    margin-left: auto;
    margin-right: auto;
    display: table;
}

.indexCycleWrap > div {
    float: left;
}

.indexCycleWrap img {
    height: 300px;
}

.landingSub {
    font-style: italic;
    text-align: center;
}

.csrImgWrap {
    margin-left: 180px;
    margin-right: 75px;
    margin-top: 25px;
}

.subscribe-form {
    margin-top: 20px;
    width: 240px;
}

.aboutCentered {
    text-align: center;
    font-size: 28px;
    margin-top: 50px;
    color: #333;
}

.aboutsWrap {
    display: table;
}

.aboutWrap {
    float: left;
    width: 388px;
    border-radius: 5px;
    border: 1px solid #999;
    box-shadow: 0px 0px 10px #ccc;
    padding: 15px;
    background-color: white;
    margin-top: 60px;
}

.aboutWrap:hover {
    border: 1px solid #888;
    box-shadow: 0px 0px 10px #aaa;
}

.aboutSpace {
    width: 60px;
    height: 1px;
    float: left;
}

.aboutSocial {
    height: 20px;
}

.aboutSocial img {
    height: 20px;
}

.aboutSocial a {
    opacity: 0.5;
    float: left;
    margin-right: 8px;
    height: 20px;
}

.aboutSocial a:hover {
    opacity: 0.9;
}

.aboutLeft, .aboutRight {
    float: left;
}

.aboutName, .aboutPosition {
    margin-bottom: 5px;
}

.aboutPosition img {
    height: 13px;
    margin-right: 5px;
}


.aboutUstitle {
    margin-bottom: 35px;
    font-size: 30px;
    text-align: center;
    color: #333;
    margin-top: 50px;
}

.aboutName {
    font-size: 20px;
    color: #333;
}

.aboutContent {
    text-align: center;
    margin-top: 15px;
}

.aboutBlurb {
    font-size: 14px;
    line-height: 20px;
    height: 75px;
    color: #666;
}

.aboutPosition {
    color: #444;
    font-size: 15px;
}

.aboutLeft {
    margin-right: 15px;
    height: 150px;
}

.aboutRight {
    width: 240px;
}

.aboutLeft img {
    height: 150px;
}

.subscribe-form-field {
    padding: 10px;
    border-radius: 5px;
    border: 1px solid #aaa;
    outline: none;
    font-size: 14px;
    color: #777;
    margin-bottom: 5px;
    width: 213px;
}

.subscribe-form-field:focus {
    border: 1px solid #666;
    box-shadow:  0px 0px 5px #aaaaaa;
    color: #222;
}


.landingleft {
    float: left;
    display: inline-block;
    margin-right: 50px;
    margin-top: 50px;
    margin-left: 180px;
}

.landingright {
    display: inline-block;
    width: 350px;
    margin-top: 50px;
}


.landingTitle {
    margin-bottom: 30px;
    font-weight: bold;
    font-size: 35px;
    color: #333;
}

.weeve-medium-button {
    background: #37abcc; /* Old browsers */
    background: -moz-linear-gradient(top, #37abcc 0%, #00a0ce 51%, #008db5 100%); /* FF3.6+ */
    background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#37abcc), color-stop(51%,#00a0ce), color-stop(100%,#008db5)); /* Chrome,Safari4+ */
    background: -webkit-linear-gradient(top, #37abcc 0%,#00a0ce 51%,#008db5 100%); /* Chrome10+,Safari5.1+ */
    background: -o-linear-gradient(top, #37abcc 0%,#00a0ce 51%,#008db5 100%); /* Opera 11.10+ */
    background: -ms-linear-gradient(top, #37abcc 0%,#00a0ce 51%,#008db5 100%); /* IE10+ */
    background: linear-gradient(top, #37abcc 0%,#00a0ce 51%,#008db5 100%); /* W3C */
    filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#37abcc', endColorstr='#008db5',GradientType=0 ); /* IE6-9 */


    color: white;
    padding: 10px 20px;
    border-radius: 5px;
    border: none;
    font-size: 18px;
}

.landingsentence {
    text-align: left;
    font-size: 20px;
    line-height: 30px;
    color: #555;
    width: 275px;
}

#navbar {
    margin: 0;
    padding: 0;
}
#navbar li {
    list-style: none;
    float: left; }
#navbar li a {

}
#navbar li ul {
    display: none;
    width: 8em; /* Width to help Opera out */
    background-color: #f2f2f2;

}


#navbar li:hover ul {
    display: block;
    position: absolute;
    margin-top: 46px;
    padding: 0;

}

#navbar li:hover li {
    float: none;
    height: 30px;
    text-align:center;
    border-bottom: 1px solid #fff;
    margin-top: 15px;

}
#navbar li:hover li a {
    background-color: #f2f2f2;
    color: #00a0ce;
    font-size:18px;


}
#navbar li li a:hover {
    background-color: #ddd;

}

