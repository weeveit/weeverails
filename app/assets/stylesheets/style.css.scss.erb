#input {border:none; margin:0; padding:0; font:14px 'Courier New',Verdana; border:0}
.te,.te1 {border:1px solid #bbb; padding:0 1px 1px; font:12px Verdana,Arial; margin:15px 0px; width: 100%;}
.te1 {
	margin: 0px !important;
}
.te1 iframe {border:none; background-color: white;}
.te iframe {border:none; background-color: white;}
#editor {cursor:text; margin:10px; font: 12px Arial;}
.fish {font-family: Verdana;}
.teheader {height:31px; border-bottom:1px solid #bbb; background:url('<%= asset_path('header-bg.gif') %>') repeat-x; padding-top:1px}
.teheader select {float:left; margin-top:5px}
.tefont {margin-left:12px}
.tesize {margin:0 3px}
.testyle {margin-right:12px}
.tedivider {float:left; width:1px; height:30px; background:#ccc}
.tecontrol {float:left; width:34px; height:30px; cursor:pointer; background-image:url('<%= asset_path('icons.png') %>')}
.tecontrol:hover {background-color:#fff; background-position:30px 0}
.tefooter {height:32px; border-top:1px solid #bbb; background:#f5f5f5}
.toggle {float:left; background:url('<%= asset_path('icons.png') %>') -34px 2px no-repeat; padding:9px 13px 0 31px; height:23px; border-right:1px solid #ccc; cursor:pointer; color:#666}
.toggle:hover {background-color:#fff}
.resize {float:right; height:32px; width:32px; background:url('<%= asset_path('resize.gif') %>') 15px 15px no-repeat; cursor:s-resize}
.tefont, .tesize, .testyle {
	margin-right: 15px;

}